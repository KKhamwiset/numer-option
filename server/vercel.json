{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "api/(.*)",
        "dest": "server.js"
      }
    ],
    "git": {
      "deploymentEnabled": {
        "main": true
      }
    },
    "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}