{
  "version": 2,
  "builds": [
    {
      "src": "server/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
  {
    "src": "/(.*)",
    "dest": "server/$1"
  }],
  "env": {
    "NODE_ENV": "production"
  },
  "rewrites": [
    { 
      "source": "/(.*)", "destination": "/" 
    }
] 
}